<form class="form-horizontal">
  <div class="form-group">
    <div class="col-sm-2 pull-left">
      <label class="control-label" for="email">Name: </label>
    </div>
    <div class="col-sm-4">
      {{ input type="text" value=name placeholder="Project Name or key(same as in JIRA)" class="form-control" }}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn-custom" {{action "addProject"}}>Add</button>
    </div>
  </div>

</form>