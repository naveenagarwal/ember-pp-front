<form class="form-horizontal">
  <div class="form-group">
    <label class="control-label col-sm-2">Name</label>
    <div class="col-sm-3">
      {{ input type="text" value=user.name placeholder="Your Name" class="form-control" }}
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Email:</label>
    <div class="col-sm-3">
      {{ input type="text" value=user.email placeholder="Your Email" class="form-control" }}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn-custom" {{action "signUp" }} >Sign Up</button>
    </div>
  </div>
</form>

